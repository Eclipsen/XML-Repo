                <mob>zombie</mob>
                <spawn>spawner</spawn>
            </allow>
        </filter>
    </mobs>
    <difficulty>1</difficulty>
    <regions>
        <apply block="deny-all">
            <rectangle name="main-area" min="-39,40" max="40,-39"/>
